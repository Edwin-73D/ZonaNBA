<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="css/admin-styles.css">
    <title>Registro</title>
</head>
<body>
    <h1 class="tituloUp">Registro de Nuevo Producto</h1>
    <div class="Registro" > 
        <form class="form-registro" method="post" action="/admin">
            <h1 id="title-register">Nuevo Producto</h1>
            <div class="Nombre">
                <input type="text" name="nombre" class="control"  placeholder="Nombre" required>
                <!--<label for="nombres">Nombre</label>-->
            </div>
            <div class="Equipo">
                <input type="text" class="control" name="equipo" placeholder="Equipo" required>
                <!-- <label for="apellidos">Apellido</label> -->
            </div>
            <div class="Talla">
                <select name="talla" class="control">
                    <option value="S">S</option>
                    <option value="M">M</option>
                    <option value="L">L</option>
                    <option value="XL">XL</option>
                </select>
                <!-- <label for="Correo">Correo</label> -->
            </div>
            <div class="Precio">
                <input type="number" class="control" name="precio" placeholder="precio" required>
                <!-- <label for="Direccion">Dirección</label> -->
            </div>
            <div class="Stock">
                <input type="number" class="control" name="stock" placeholder="Stock" required>
                <!-- <label for="Telefono">Número de teléfono</label> -->
            </div>
            <div class="Descripcion">
                <textarea type="text" class="control" name="descripcion" required>
                    Ingrese la descripcion del producto
                </textarea>

                <!-- <label for="Fecha-nacimiento">Fecha de nacimiento</label> -->
            </div>
            <div class="Img">
                <input type="text" class="control" name="img" placeholder="Url de la imagen" required>
                <!-- <label for="password">Contraseña</label>    -->
            </div>
            <div class="Codigo">
                <input type="text" class="control" name="codigo" placeholder="Codigoo" required>
                <!-- <label for="apellidos">Apellido</label> -->
            </div>
            <input class="button-Registro" type="submit" value="Registrar">

        </form>
   </div>

   <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
   
   <% if(typeof alert != "undefined") { %>
        <script>
            Swal.fire({
                title:"<%= alertTitle %>",
                text: "<%= alertMessage %>",
                icon: "<%= alertIcon %>",
                showConfirmButton: "<%= showConfirmButton %> ",
                timer: "<%= timer %> ",
            }).then(()=>{
                window.location="/<%= ruta %>"
            })
        </script>
        <% } %>

</body>
</html>

